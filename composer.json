{
    "name": "dive-be/eloquent-super",
    "description": "Lightweight MTI (Multi Table Inheritance) support for Eloquent models",
    "keywords": [
        "dive",
        "eloquent-super",
        "mti",
        "multi",
        "table",
        "inheritance"
    ],
    "homepage": "https://github.com/dive-be/eloquent-super",
    "license": "MIT",
    "authors": [
        {
            "name": "Muhammed Sari",
            "email": "muhammed@dive.be",
            "homepage": "https://dive.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.0",
        "illuminate/database": "^8.0",
        "illuminate/support": "^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.18.2",
        "nunomaduro/larastan": "^0.7",
        "orchestra/testbench":"^6.0",
        "phpunit/phpunit": "^9.0",
        "pestphp/pest": "^1.0",
        "pestphp/pest-plugin-laravel": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Dive\\EloquentSuper\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "format": "vendor/bin/php-cs-fixer fix --config .php_cs.dist --allow-risky=yes",
        "test": "vendor/bin/pest"
    },
    "config": {
        "sort-packages": true
    }
}
